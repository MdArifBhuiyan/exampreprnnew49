{
  "compilerOptions": {
    "lib": ["esnext"], // Remove "dom" from lib
    "module": "commonjs",
    "target": "es2017",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true // Skip type checking for libraries
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}