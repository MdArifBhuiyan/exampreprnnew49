{ 
  "extends": "@tsconfig/node16/tsconfig.json", 
  "compilerOptions": { 
    "module": "ESNext", 
    "moduleResolution": "bundler", 
    "target": "ESNext", 
    "jsx": "react-native", 
    "allowSyntheticDefaultImports": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "baseUrl": ".", 
    "paths": { 
      "*": ["src/*"] 
    } 
  }, 
  "include": [ 
    "src/**/*", 
    "**/*.ts", 
    "**/*.tsx" 
  ], 
  "exclude": [ 
    "node_modules", 
    "babel.config.js", 
    "metro.config.js", 
    "jest.config.js", 
    "TestCamera" 
  ] 
}
